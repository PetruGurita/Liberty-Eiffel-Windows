class EDC_TYPED_DATUM[D_]

inherit
   EDC_DATUM

create {EDC_DATUM_FACTORY}
   set_item

feature {ANY}
   item: D_

feature {}
   set_item (a_item: like item)
      require
         a_item /= Void
      do
         item := a_item
      ensure
         item = a_item
      end

invariant
   item /= Void

end -- class EDC_TYPED_DATUM
